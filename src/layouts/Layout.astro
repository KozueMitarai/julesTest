---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<header>
			<a href={import.meta.env.BASE_URL} class="site-title">AI情報まとめサイト</a>
			<nav>
				<a href={import.meta.env.BASE_URL}>ホーム</a>
				<a href={`${import.meta.env.BASE_URL}/llm`}>LLM</a>
				<a href={`${import.meta.env.BASE_URL}/image-generation`}>画像生成</a>
				<a href={`${import.meta.env.BASE_URL}/efficiency`}>業務効率化</a>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p>© 2025 AI情報まとめサイト</p>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--background-light: #F0F4F8;
		--background-dark: #1A202C;
		--text-light: #2D3748;
		--text-dark: #E2E8F0;
		--primary-blue: #336699;
		--accent-blue: #0099FF;
		--border-color-light: #CBD5E0;
		--border-color-dark: #4A5568;
	}
	html {
		font-family: 'Noto Sans JP', sans-serif;
		background: var(--background-light);
		color: var(--text-light);
	}

	body {
		margin: 0 auto;
		padding: 0 2rem;
		max-width: 960px;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 2rem 0;
		border-bottom: 1px solid var(--border-color-light);
	}

	header .site-title {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--primary-blue);
		text-decoration: none;
	}

	nav {
		display: flex;
		gap: 1.5rem;
	}

	nav a {
		text-decoration: none;
		color: var(--text-light);
		font-weight: 500;
		transition: color 0.2s ease;
	}

	nav a:hover {
		color: var(--accent-blue);
	}

	main {
		flex-grow: 1;
		padding: 2rem 0;
	}

	footer {
		padding: 2rem 0;
		text-align: center;
		border-top: 1px solid var(--border-color-light);
		color: #718096;
	}

	@media (prefers-color-scheme: dark) {
		html {
			background: var(--background-dark);
			color: var(--text-dark);
		}
		header, footer {
			border-color: var(--border-color-dark);
		}
		nav a {
			color: var(--text-dark);
		}
		header .site-title {
			color: var(--accent-blue);
		}
	}
</style>
